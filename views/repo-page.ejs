<!-- add header page -->
<% include ./partials/header %>
  <div class="container">
    <div class="navbar navbar-expand-lg navbar-light bg-light justify-content-md-between">
      <span class="navbar-brand h1">Repos</span>
      <div>
        <a class="btn btn-sm btn-outline-primary" href="/user">User</a>
        <a id="logout-button" class="btn btn-sm btn-secondary" href="/logout">Logout</a>
      </div>
    </div>
    <div class="container">
      <div class="row mb-4">
        <% for(let [key, value] of Object.entries(repos)) { %>
          <div class="col-md-6 repo-component">
            <ul class="list-group mt-4 p-3">
              <li class="p-1 list-group-item-action">
                <span class="font-weight-bold font-italic ">
                  Name: 
                  <span class="font-weight-normal font-italic"><%= value.name %></span>
              </span>
              </li>
              <li class="p-1 list-group-item-action">
                <span class="font-weight-bold font-italic">
                  Url: 
                  <span class="font-weight-normal font-italic">
                  <a href="<%= value.html_url %>"><%= value.html_url %></span></a>
                </span>
              </li>
              <li class="p-1 list-group-item-action">
                <span class="font-weight-bold font-italic">
                  Description: 
                  <span class="font-weight-normal font-italic"><%= value.description %></span>
                </span>
              </li>
              <li class="p-1 list-group-item-action">
                <span class="font-weight-bold font-italic">
                  Fork: 
                  <span class="font-weight-normal font-italic"><%= value.fork %></span>
                </span>
              </li>
              <li class="p-1 list-group-item-action">
                <span class="font-weight-bold font-italic">
                  Created At:
                  <span class="font-weight-normal font-italic">
                    <% let date = new Date(value.created_at)%>
                    <%= date.toDateString() %>
                  </span>
                </span>
              </li>
              <li class="p-1 list-group-item-action">
                <span class="font-weight-bold font-italic">
                  Language: 
                  <span class="font-weight-normal font-italic"><%= value.language %></span>
                </span>
              </li>
            </ul>
          </div>
        <% } %>
      </div>
    </div>
  </div>
<!-- add footer page -->
<% include ./partials/footer %>